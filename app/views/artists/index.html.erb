<%= currently_at 'Artists'%>



<table id="artists" class="display">
<thead>

  <tr>
    <th>Name</th>
    <th>Band</th>
    <th>Image</th>

  </tr>

<% @artists.each do |artist| %>
  <tr>
    <td><%= link_to(artist.full_name, artist) %></td>
    <td><%= artist.band %></td>
    <td><%= image_tag(artist.image_url.to_s, size: "100x70") %></td>

  </tr>

<% end %>
</table>

